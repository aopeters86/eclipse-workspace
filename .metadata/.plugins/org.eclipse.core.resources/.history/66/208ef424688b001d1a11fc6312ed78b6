class Positive{

	  public static int sum(int[] arr){
		  
	    
	    int posArr[] = {10,-2,13,2};
	    int positive = posArr[0];
	   // int negative = posArr[0];
	    
	    

	    if(arr.length==0){
	    	return 0;
	    }
	    
	    for(int i = 0; i < posArr.length; i++) {
	    	if (i > 0) {
	    		positive += posArr[i];
	    		
	    	}
	    		    	
	    }    
	  
		return positive;
	  }
	}