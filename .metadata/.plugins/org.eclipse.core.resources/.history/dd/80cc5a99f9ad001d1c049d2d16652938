
public class Cat extends Pet{
	
	String hair;
	String claws;
	String foodtype;

	
	public Cat() {
		
	}
	
	public Cat(String hair, String claws, String foodtype){
		this.hair = hair;
		this.claws = claws;
		this.foodtype = foodtype;
	}

	public String getHair() {
		return hair;
	}

	public Boolean setHair(String hair) {
		this.hair = hair;
		return true;
	}

	public String getClaws() {
		return claws;
	}

	public Boolean setClaws(String claws) {
		this.claws = claws;
		return true;
	}
	

	public String getFoodtype() {
		return foodtype;
	}

	public Boolean setFoodtype(String foodtype) {
		this.foodtype = foodtype;
		return true;
	}
	
	public void printCat() {//give an option for these?
		System.out.println("Shorthair, long hair, or hairless? " +hair + "\nClawed or declawed? " + claws + "\nSoft or hard food?" + foodtype);
	}
	
	
}
