class Positive{

	  public static int sum(int[] arr){
		  
	    
	    int posArr[] = {1, -4, 7, 12};
	    int positive = posArr[0];
	    int negative = posArr[0];
	    
	    
//	    int negative = posArr[];
	    
	    for(int i = 0; i < posArr.length; i++) {
	    	if (i <= 0) {
	    		positive += posArr[i];
	    	}
	    	else if(i < 0) {
	    		negative += posArr[i];
	    	}
	    	
	    }
	       
	    
	    
	    return 0;
	  }

	}